{
  "name": "node-typescript-template",
  "version": "1.0.0",
  "description": "template for node + typescript projects",
  "author": "Bhanu Pratap Singh",
  "license": "ISC",
  "main": "server.js",
  "scripts": {
    "build": "npm run build-ts && npm run copyAssets",
    "copyAssets": "ts-node copyAssets.ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "dev": "concurrently -i -n \"TS,NODE\" -c \"bgMagenta.bold,bgCyan.bold\" \"npm run watch-ts\" \"npm run watch-node\" "
  },
  "engines": {
    "node": "12.13.1"
  },
  "dependencies": {
    "express": "^4.16.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.27",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "concurrently": "^5.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "shelljs": "^0.8.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "eslint": "^7.6.0",
    "nodemon": "^2.0.7",

  }
}
